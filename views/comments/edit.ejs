<% include ../partials/header%>
<div class="container">
    <div class="row">
            <h1 class="display-4 text-center col-md-12">Edit Comment</h1>
            <div style="width:30%; margin:30px auto;">
                    <form action="/campgrounds/<%=campground_id%>/comments/<%=comment._id%>?_method=PUT" method="POST">
                        <div class="form-group">
                                <input class="form-control" type="text" name="comment[text]" value="<%=comment.text%>">
                        </div>
                        <div class="form-group">
                                <button class="btn btn-large btn-outline-primary btn-block">Submit!</button>
                        </div>
                    </form>
                    <a href="/campgrounds">Go back!</a>
            </div> 
    </div>
  
</div>


<% include ../partials/footer%>

