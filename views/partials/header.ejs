<!DOCTYPE html>
<html>
    <head>
        <title>Picster</title>
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css"
         integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
        <link href="/stylesheets/main.css" rel="stylesheet">
    </head>
    <body>
<nav class="navbar navbar-expand-md navbar-dark bg-dark mb-4">
    <div class="container">
        <a class="navbar-brand" href="/">Picster</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#abc">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collaspe navbar-collapse" id="abc">
            <div class="nav navbar-nav mr-auto">
                <li class="nav-item active">
                    <a class="nav-link" href="/campgrounds">Home</a>
                </li>
            </div>
            <div class="nav navbar-nav ml-auto">
                <% if(!currentUser) { %>                                <!--   Displays the login,register links on the navbar only if  the user is not logged in -->
                    <li class="nav-item">
                        <a class="nav-link" href="/login">Login</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/register">SignUp</a>
                    </li>
                <% } else { %>
                    <li class="nav-item">
                        <a class="nav-link" href = "users/<%= currentUser._id %>">Signed in as <%=currentUser.username%></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/logout">LogOut</a>
                    </li>
                <% } %>
            </div>
        </div>
    </div>
</nav>
<div class="container">
    <% if(error && error.length > 0) { %>
        <div class="alert alert-danger" role="alert">
                 <%= error %>                                 <!-- Displays the error flash message!   -->
        </div>
    <% } %>
    <% if(success && success.length > 0) { %>
         <div class="alert alert-success" role="alert">         <!--    Displays the success flash message -->
                <%= success %>
        </div>
    <% } %>
</div>

   