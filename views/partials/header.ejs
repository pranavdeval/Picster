<!DOCTYPE html>
<html>
    <head>
        <title>YelpCamp</title>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
        <link href="/stylesheets/main.css" rel="stylesheet">
    </head>
    <body>
<nav class="navbar navbar-default">
    <div class="container-fluid">
        <div class="navbar-header">
            <a class="navbar-brand" href="/">YelpCamp</a>
        </div>
        <ul class="nav navbar-nav">
            <li class="active"><a href="/campgrounds">Home</a></li>
        </ul>
        <div class="collapse navbar-collapse">
            <ul class="nav navbar-nav navbar-right">
                 <% if(!currentUser) { %>                                <!--   Displays the login,register links on the navbar only if  the user is not logged in -->
                    <li><a href="/login">Login</a></li>
                    <li><a href="/register">SignUp</a></li>
                <% } else { %>
                    <li><a href = "users/<%= currentUser._id %>">Signed in as <%=currentUser.username%></a></li>
                    <li><a href="/logout">LogOut</a></li>
                <% } %>
            </ul>
        </div>
    </div>
</nav>
<div class="container">
    <% if(error && error.length > 0) { %>
        <div class="alert alert-danger" role="alert">
                 <%= error %>                                 <!-- Displays the error flash message!   -->
        </div>
    <% } %>
    <% if(success && success.length > 0) { %>
         <div class="alert alert-success" role="alert">         <!--    Displays the success flash message -->
                <%= success %>
        </div>
    <% } %>
</div>

   