<% include ../partials/header%>
<div class="container">
    <div class="row">
            <h1 style="text-align:center;">Edit Campground <%=campground.name%></h1>
            <div style="width:30%; margin:30px auto;">
                    <form action="/campgrounds/<%=campground._id%>?_method=PUT" method="POST">
                        <div class="form-group">
                                <input class="form-control" type="text" value="<%=campground.name%>" name="campground[name]" placeholder="Name">
                        </div>
                        <div class="form-group">
                                <input class="form-control" type="number" value="<%=campground.price%>" name="campground[price]" placeholder="Price" min="100" step="100">
                        </div>
                        <div class="form-group">
                                <input class="form-control"  type="text" value="<%=campground.image%>" name="campground[image]" placeholder="Image URL">
                        </div>
                        <div class="form-group">
                                <input class="form-control"  type="text" value="<%=campground.description%>" name="campground[description]" placeholder="Description">
                        </div>
                        <div class="form-group">
                                <button class="btn btn-large btn-primary btn-block">Submit!</button>
                        </div>
                    </form>
                    <a href="/campgrounds">Go back!</a>
            </div> 
    </div>
  
</div>


<% include ../partials/footer%>

<!-- Shows a form to edit a particular campground!  -->