<% include ../partials/header%>


<div class="container">
    <header class="jumbotron">
        <div class="container">
                <h1>Welcome to Picster!</h1>
                <p>View our high-resolution 4k images from all over the world!!</p>
                <p>
                    <a class="btn btn-primary btn-large" href="/campgrounds/new">Add a new Image!</a>
                </p> 
                <p>
                    <form action = "/campgrounds" method = "GET" class = "form-inline">
                        <div class = "form-group">
                            <input type = "text" name = "search" placeholder="Campground Search..." class = "form-control">
                            <input type = "submit" value = "Search" class = "btn btn-sm btn-primary ml-2">
                        </div>
                    </form>
                </p>
        </div>
    </header>
    


    <div class="row text-center">     
            <div class="col-md-12">
                <% if(noMatch !== null) { %>
                        <h3><%=noMatch%></h3>
                <% } %>
            </div>    
            <% campgrounds.forEach(function(campground) { %>
                <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
                    <div class="card">
                        <img class = "card-img-top" src="<%= campground.image %>" >
                        <div class="card-body">
                            <h3 class="card-title"><%= campground.name %></h3>
                            <a href="/campgrounds/<%=campground._id%>" class="btn btn-outline-primary">More Info</a>
                        </div>
                    </div>
                </div>
            <% }); %>
    </div>
</div>


<% include ../partials/footer%>


