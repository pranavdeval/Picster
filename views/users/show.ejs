<% include ../partials/header %>

<div class="container mt-5">
    <h1 class="display-3 col-md-12 text-center mt-5"><%= user.firstname %> <%= user.lastname %></h1>
</div>


<hr>

<div class="container mt-5">
    <div class="row"></div>
        <% campgrounds.forEach(function(campground) { %>
        
            <div class="col-md-12 mt-5">
                 <a style="margin-top: 2rem;" href = "/campgrounds/<%= campground._id %>"><img class="" 
                 style="border:5px solid black;" src="<%= campground.image %>" width="100%" length="50%"/></a>
            </div>
        
        <% }) %>
    </div>
</div>



<% include ../partials/footer %>